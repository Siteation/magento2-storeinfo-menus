<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="footer_links" remove="true"/>

        <referenceContainer name="footer">
            <block
                name="storeinfo.footer.menu.about"
                template="Siteation_StoreInfoMenus::menu.phtml"
            >
                <arguments>
                    <argument name="menu_id" xsi:type="string">about</argument>
                    <argument name="title" xsi:type="string" translate="true">About Us</argument>
                    <argument name="store_info_menus" xsi:type="object">Siteation\StoreInfoMenus\ViewModel\StoreInfoMenus</argument>
                </arguments>
            </block>
            <block
                name="storeinfo.footer.menu.services"
                template="Siteation_StoreInfoMenus::menu.phtml"
            >
                <arguments>
                    <argument name="menu_id" xsi:type="string">services</argument>
                    <argument name="title" xsi:type="string" translate="true">Services</argument>
                    <argument name="store_info_menus" xsi:type="object">Siteation\StoreInfoMenus\ViewModel\StoreInfoMenus</argument>
                </arguments>
            </block>
            <block
                name="storeinfo.footer.menu.legal"
                template="Siteation_StoreInfoMenus::menu.phtml"
            >
                <arguments>
                    <argument name="menu_id" xsi:type="string">legal</argument>
                    <argument name="title" xsi:type="string" translate="true">Legal</argument>
                    <argument name="store_info_menus" xsi:type="object">Siteation\StoreInfoMenus\ViewModel\StoreInfoMenus</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
